CursorXY MACRO fila, columna
; Posiciona el cursor en las coordenadas introducidas.
;------------------------------------------------------
    MOV AH, 02h         
    MOV BH, 00h         
    MOV DH, fila        
    MOV DL, columna     
    INT 10h
ENDM 

;------------------------------------------------------
WriteString MACRO string
; Escribe una cadena en la salida est치ndar.
;------------------------------------------------------
    MOV AH, 09h         
    LEA DX, string      
    INT 21h             
ENDM

;------------------------------------------------------
ReadCharEcho MACRO
; Lee un solo caracter de la entrada est치ndar, con eco.
;------------------------------------------------------
    MOV AH, 01h
    INT 21h
ENDM

