cls PROC
; Limpia la pantalla (25 filas y 80 columnas)
;-------------------------------------------------------
    POPA                    
    MOV     ax,0600h        
    MOV     cx,0            
    MOV     dx,184Fh        
    MOV     bh,7            
    INT     10h             
    PUSHA                   
    RET
cls ENDP
;------------------------------------------------------
CursorHide PROC
; Oculta el puntero del cursor
;------------------------------------------------------
    MOV AX, 02H                 
    INT 33H                     
    RET
CursorHide ENDP

;------------------------------------------------------
CursorShow PROC
; Muestra el puntero del cursor
;------------------------------------------------------
    MOV AX, 01H                 
    INT 33H                     
    RET
CursorShow ENDP

;------------------------------------------------------
Delay PROC
; Hace un delay de aprox. 4 segundos
;------------------------------------------------------
    MOV     CX, 1FH         
    MOV     DX, 4240H       
    MOV     AH, 86H         ; Int 15h/86h - BIOS - WAIT (AT,PS)
    INT     15H             
    RET
delay ENDP
